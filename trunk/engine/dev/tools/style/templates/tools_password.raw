{$header}

<if expression="isset($results)">
	{$results}
</if>

<form action="./tools.php?do=password" method="post">
<div class="box">
	<h4>Password generator</h4>

	<p>
		The password generator is used to generate the 
		password hashes using a predefined salt that needs 
		to be available while checking if the password is 
		correct.
	</p>

	<table cellspacing="0" cellpadding="0">
		<tr>
			<td style="width: 20%;">
				Password</td>
			<td>
				<input type="password" name="keyword" /></td>
		</tr>
		<tr>
			<td nowrap="nowrap">
				Hide password?</td>
			<td>
				<label><input type="checkbox" name="hide_password" value="1" /> Yes</label></td>
		</tr>
		<tr>
			<td nowrap="nowrap">
				Salt length</td>
			<td>
				<select name="characters">
					<option value="8">8 bytes (default)</option>
					<option value="32"<if expression="isset($_POST['characters']) && $_POST['characters'] == 32"> selected="selected"</if>>32 bytes</option>
					<option value="64"<if expression="isset($_POST['characters']) && $_POST['characters'] == 64"> selected="selected"</if>>64 bytes</option>
				</select></td>
		</tr>
	</table>
</div>

<div class="box">
	<input type="submit" name="submit" value="Generate" />
</div>
</form>

{$footer}