<tr>
	<td style="width: 100%;">
		{$name}
	</td>
	<td>
		{$bits}
	</td>
	<td nowrap="nowrap">
		<label>
			<input type="radio" name="permission[{$name}]" value="1"<if expression="$permitted"> checked="checked"</if> />
			Permitted
		</label>
		<label>
			<input type="radio" name="permission[{$name}]" value="0"<if expression="!$permitted"> checked="checked"</if> />
			Restricted
		</label>
	</td>
</tr>