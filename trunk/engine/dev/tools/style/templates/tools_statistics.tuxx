{$header}

<div class=\"box\">
	<h4>Code statistics</h4>

	<table cellspacing=\"0\" cellpadding=\"0\">
		<tr class=\"heading\">
			<td nowrap=\"nowrap\" class=\"start\">
				File extensions
			</td>
			<td nowrap=\"nowrap\">
				Total lines of code
			</td>
			<td nowrap=\"nowrap\" class=\"end\">
				Total size (bytes)
			</td>
		</tr>
		<tr>
			<td>
				{$statistics['lines']}
			</td>
			<td>
				{$statistics['total']['lines']}
			</td>
			<td>
				{$statistics['total']['size']}
			</td>
		</tr>
	</table>

	<table cellspacing=\"0\" cellpadding=\"0\">
		<tr class=\"heading\">
			<td class=\"start\">
				Extension
			</td>
			<td nowrap=\"nowrap\">
				Lines of code
			</td>
			<td nowrap=\"nowrap\">
				Number of files
			</td>
			<td nowrap=\"nowrap\">
				Size (bytes)
			</td>
			<td nowrap=\"nowrap\">
				Blank lines
			</td>
			<td class=\"end\">
				Notes
			</td>
		</tr>
		{$extensions}
	</table>
</div>

{$footer}