{$header}

<div class=\"box\">
	<h4>Session details</h4>

	<table cellspacing=\"0\" cellpadding=\"0\">
		<tr class=\"heading\">
			<td colspan=\"2\" class=\"start end\">
				<h5>Session</h5></td>
		</tr>
		<tr>
			<td style=\"width: 20%;\">
				Session ID</td>
			<td>
				<code>{$session['sessionid']}</code></td>
		</tr>
		<tr>
			<td>
				Last activity</td>
			<td>
				{$session['lastactivity']}</td>
		</tr>
		<tr>
			<td>
				Expiration</td>
			<td>
				{$session['expires']}</td>
		</tr>
		<tr>
			<td>
				Browser</td>
			<td>
				{$session['useragent']}</td>
		</tr>
		<tr>
			<td>
				Location</td>
			<td>
				{$session['location']}</td>
		</tr>
" . (($session['userid']) ? ("
		<tr class=\"heading\">
			<td colspan=\"2\" class=\"start end\">
				<h5>User information</h5></td>
		</tr>
		<tr>
			<td>
				User ID</td>
			<td>
				{$session['userid']}</td>
		</tr>
		<tr>
			<td>
				Username</td>
			<td>
				{$userinfo->username}</td>
		</tr>
		<tr>
			<td>
				Usergroup</td>
			<td>
				{$usergroup->title}</td>
		</tr>
") : '') . "
	</table>
</div>

<div class=\"box\">
	<input type=\"button\" onclick=\"location.href = './sessions.php?do=kill&action=single&id={$session['sessionid']}';\" value=\"Kill\" />
</div>

{$footer}