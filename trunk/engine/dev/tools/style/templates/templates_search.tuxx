{$header}

<form action=\"./styles.php?style={$styleid}&do=templates&action=search\" method=\"post\">
	<div class=\"box\">
		<h4>Search templates</h4>

		<table cellspacing=\"0\" cellpadding=\"0\">
			<tr>
				<td style=\"width: 30%;\">
					Search phrase:</td>
				<td>
					<input type=\"text\" name=\"query\" /></td>
			</tr>
