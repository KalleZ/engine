<tr>
	<td>
		{$opt['option']}
	</td>
	<td nowrap="nowrap">
<if expression="!strlen($value)">
		<em>Default</em>
<else />
		{$value}
</if>
	</td>
	<td nowrap="nowrap">
		{$defaultvalue}
	</td>
	<td>
		<if expression="$cached">Yes<else />No</if>
	</td>
	<td nowrap="nowrap">
<if expression="$cached && ($cache->options[$opt['option']] == $opt['defaultvalue'])">
		<em>Default</em>
<else />
		{$cachevalue}
</if>
	</td>
	<td nowrap="nowrap">
		<select onchange="engine_options_handler(this, '{$opt['option']}');">
			<option></option>
			<option value="edit">Edit</option>
			<option value="delete">Delete</option>
			<option value="reset">Reset</option>
		</select>
	</td>
</tr>