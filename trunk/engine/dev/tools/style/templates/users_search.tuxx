{$header}

<form action=\"./users.php?do=user&action=search\" method=\"post\">
	<div class=\"box\">
		<h4>Search users</h4>

		<table cellspacing=\"0\" cellpadding=\"0\">
			<tr>
				<td style=\"width: 30%;\">
					Search field:</td>
				<td>
					<select name=\"query_field\">
					{$fields_dropdown}
					</select></td>
			</tr>
			<tr>
				<td>
					Search phrase:</td>
				<td>
					<input type=\"text\" name=\"query\"" . ((isset($safe_query)) ? (" value=\"{$safe_query}\"") : '') . " /></td>
			</tr>
		</table>
	</div>
	<div class=\"box\">
		<input type=\"submit\" name=\"submit\" value=\"Search\" />
	</div>
</form>

" . ((isset($table)) ? ("
<div class=\"box\">
	<h4>Matched users</h4>

	<p>
		{$matches} user(s) matched your search criteria
	</p>

	<br />
	<table cellspacing=\"0\" cellpadding=\"0\">
		<tr class=\"heading\">
			<td class=\"start\">
				#
			</td>
			<td>
				Username
			</td>
			<td>
				Usergroup
			</td>
			<td>
				Permissions
			</td>
			<td class=\"end\">
				&nbsp;
			</td>
		</tr>
		{$table}
	</table>
</div>
") : '') . "

{$footer}