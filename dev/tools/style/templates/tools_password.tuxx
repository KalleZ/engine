{$header}

<form action=\"./tools.php?do=password\" method=\"post\">
<div class=\"box\">
	<h4>Password generator</h4>

	<p>
		The password generator is used to generate the 
		password hashes using a predefined salt that needs 
		to be available while checking if the password is 
		correct.
	</p>

	<table cellspacing=\"0\" cellpadding=\"0\">
		<tr>
			<td style=\"width: 20%;\">
				Password</td>
			<td>
				<input type=\"password\" name=\"keyword\" id=\"keyword\" /></td>
		</tr>
		<tr>
			<td nowrap=\"nowrap\">
				Hide password?</td>
			<td>
				<label><input type=\"checkbox\" onchange=\"engine_swap_password_to_text('keyword');\" checked=\"checked\" /> Yes</label></td>
		</tr>
		<tr>
			<td nowrap=\"nowrap\">
				Salt length</td>
			<td>
				<select name=\"characters\">
					<option value=\"8\">8 bytes (default)</option>
					<option value=\"16\"" . ((isset($_POST['characters']) && $_POST['characters'] == 16) ? (" selected=\"selected\"") : '') . ">16 bytes</option>
					<option value=\"32\"" . ((isset($_POST['characters']) && $_POST['characters'] == 32) ? (" selected=\"selected\"") : '') . ">32 bytes</option>
				</select></td>
		</tr>
	</table>
</div>

<div class=\"box\">
	<input type=\"submit\" name=\"submit\" value=\"Generate\" />
</div>
</form>

" . (($valid) ? ("
<div class=\"box\">
	<h4>Result</h4>

	<table cellspacing=\"0\" cellpadding=\"0\">
		<tr>
			<td style=\"width: 20%;\">
				Password</td>
			<td>
				<code>{$password}</code></td>
		</tr>
		<tr>
			<td nowrap=\"nowrap\">
				Salt (length: {$chars})</td>
			<td>
				<code>{$salt}</code></td>
		</tr>
		<tr>
			<td nowrap=\"nowrap\">
				Password hash</td>
			<td>
				<code>{$hash}</code></td>
		</tr>
		<tr>
			<td>
				Algorithm</td>
			<td>
				<code>sha1(sha1(password) . salt)</code></td>
		</tr>
		<tr>
			<td>
				Example</td>
			<td>
				<code>sha1(sha1('{$password}') . '{$salt}') === '{$hash}'</code></td>
		</tr>
	</table>
</div>
") : '') . "

{$footer}