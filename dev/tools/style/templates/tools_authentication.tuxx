
{$header}


<form action=\"./tools.php?do=authentication\" method=\"post\">
	<div class=\"box\">
		<h4>User authentication</h4>

		<p>
			This tool is designed to test user log in information
		</p>

		<table cellspacing=\"0\" cellpadding=\"0\">
			<tr>
				<td style=\"width: 20%;\">
					Identifying field</td>
				<td>
					<select name=\"identifier_field\">
						<option value=\"username\">Username</option>
						<option value=\"email\">Email</option>
					</select></td>
			</tr>
			<tr>
				<td>
					Identifier</td>
				<td>
					<input type=\"text\" name=\"identifier\" size=\"32\" /></td>
			</tr>
			<tr>
				<td>
					Password</td>
				<td>
					<input type=\"password\" name=\"password\" size=\"32\" id=\"password_canvas\" /></td>
			</tr>
			<tr>
				<td>
					&nbsp;</td>
				<td>
					<label><input type=\"radio\" name=\"canvas_dummy\" value=\"0\" onclick=\"if(this.checked){ engine_swap_password_to_text('password_canvas'); }\" checked=\"checked\" /> Protect password</label>
					<label><input type=\"radio\" name=\"canvas_dummy\" value=\"1\" onclick=\"if(this.checked){ engine_swap_password_to_text('password_canvas'); }\" /> Show password as text</label></td>
			</tr>
		</table>
	</div>

	<div class=\"box\">
		<input type=\"submit\" name=\"progress\" value=\"Test log in\" />
	</div>
</form>

" . ((isset($logged_in)) ? ("
<div class=\"" . (($logged_in) ? ("box") : ("warning")) . "\">
	<p>
		The user information <strong>" . (($logged_in) ? ("PASSED") : ("FAILED")) . "</strong> the test
	</p>
</div>
") : '') . "

{$footer}