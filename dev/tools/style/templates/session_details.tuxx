{$header}

<div class=\"box\">
	<h4>Session details</h4>

	<table cellspacing=\"0\" cellpadding=\"0\">
		<tr class=\"heading\">
			<td colspan=\"2\" class=\"start end\">
				<h5>Session</h5></td>
		</tr>
		<tr>
			<td style=\"width: 20%;\">
				Session ID</td>
			<td>
				<strong>{$session['sessionid']}</strong></td>
		</tr>
		<tr>
			<td>
				Last activity</td>
			<td>
				<strong>{$session['lastactivity']}</strong></td>
		</tr>
		<tr>
			<td>
				Expiration</td>
			<td>
				<strong>{$session['expires']}</strong></td>
		</tr>
		<tr>
			<td>
				Browser</td>
			<td>
				<strong>{$session['useragent']}</strong></td>
		</tr>
		<tr>
			<td>
				Location</td>
			<td>
				<strong>{$session['location']}</strong></td>
		</tr>
" . (($session['userid']) ? ("
		<tr class=\"heading\">
			<td colspan=\"2\" class=\"start end\">
				<h5>User information</h5></td>
		</tr>
		<tr>
			<td>
				User ID</td>
			<td>
				<strong>{$session['userid']}</strong></td>
		</tr>
		<tr>
			<td>
				Username</td>
			<td>
				<strong>{$userinfo->username}</strong></td>
		</tr>
		<tr>
			<td>
				Usergroup</td>
			<td>
				<strong>{$usergroup['title']}</strong></td>
		</tr>
") : '') . "
	</table>
</div>

<div class=\"box\">
	<input type=\"button\" onclick=\"location.href = './sessions.php?do=kill&action=single&id={$session['sessionid']}';\" value=\"Kill\" />
</div>

{$footer}