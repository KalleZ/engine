<div class="box">
	<h4>Result</h4>

	<table cellspacing="0" cellpadding="0">
		<tr>
			<td style="width: 20%;">
				Password</td>
			<td>
				{$password}</td>
		</tr>
		<tr>
			<td nowrap="nowrap">
				Salt (length: {$chars})</td>
			<td>
				<code>{$salt}</code></td>
		</tr>
		<tr>
			<td nowrap="nowrap">
				Password hash</td>
			<td>
				<code>{$hash}</code></td>
		</tr>
	</table>
</div>