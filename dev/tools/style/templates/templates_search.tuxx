{$header}

<form action=\"./styles.php?style={$styleid}&do=templates&action=search\" method=\"post\">
	<div class=\"box\">
		<h4>Search templates</h4>

		<table cellspacing=\"0\" cellpadding=\"0\">
			<tr>
				<td nowrap=\"nowrap\" style=\"width: 30%;\">
					Search phrase:</td>
				<td>
					<input type=\"text\" name=\"query\"" . ((isset($safe_query)) ? (" value=\"{$safe_query}\"") : '') . " /></td>
			</tr>
			<tr>
				<td nowrap=\"nowrap\">
					Search in customized templates only?</td>
				<td>
					<label><input type=\"checkbox\" name=\"search_changed\" value=\"1\"" . ((isset($safe_query) && isset($_POST['search_changed'])) ? (" checked=\"checked\"") : '') . " /> Yes</label></td>
			</tr>
		</table>
	</div>
	<div class=\"box\">
		<input type=\"submit\" value=\"Search\" />
	</div>
</form>

" . ((isset($table)) ? ("
<div class=\"box\">
" . ((!empty($table)) ? ("
	<h4>Search results</h4>

	<p>
		{$matches} template(s) matched your search criteria
	</p>

	<br />
	<table cellspacing=\"0\" cellpadding=\"0\">
		<tr class=\"heading\">
			<td class=\"start\">
				#
			</td>
			<td>
				Name
			</td>
" . ((!$wildsearch) ? ("
			<td nowrap=\"nowrap\">
				Matched keywords
			</td>
") : '') . "
			<td>
				Revision
			</td>
			<td nowrap=\"nowrap\">
				Customized?
			</td>
			<td class=\"end\">
				&nbsp;
			</td>
		</tr>
		{$table}
	</table>
") : ("
	<p class=\"error\">
		Search returned zero results.
	</p>
")) . "
</div>
") : '') . "

{$footer}