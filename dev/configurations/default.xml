<?xml version="1.0" encoding="UTF-8"?>
<tuxxedo>
	<document type="configuration">
		<meta>
			<parameter name="configuration-name" value="Production" />
		</meta>
		<section name="application">
			<object name="name">
				<parameter name="type" value="string" />
				<parameter name="value" value="" />
				<parameter name="default" value="" />
				<description>
					<![CDATA[ Application name ]]>
				</description>
			</object>
			<object name="version">
				<parameter name="type" value="string" />
				<parameter name="value" value="" />
				<parameter name="default" value="" />
				<description>
					<![CDATA[ Application version ]]>
				</description>
			</object>
			<object name="debug">
				<parameter name="type" value="boolean" />
				<parameter name="value" value="true" />
				<parameter name="default" value="false" />
				<description>
					<![CDATA[ Debug mode ]]>
				</description>
			</object>
		</section>
		<section name="database">
			<object name="driver">
				<parameter name="type" value="enum" />
				<parameter name="value" value="mysqli" />
				<parameter name="default" value="mysqli" />
				<description>
					<![CDATA[ Database driver ]]>
				</description>
				<values>
					<value>mysql</value>
					<value>mysqli</value>
					<value>pdo</value>
				</values>
			</object>
			<object name="subdriver">
				<parameter name="type" value="string" />
				<parameter name="value" value="" />
				<parameter name="default" value="" />
				<description>
					<![CDATA[ Database sub driver ]]>
				</description>
				<values>
					<group name="pdo">
						<value>mysql</value>
					</group>
				</values>
			</object>
			<object name="dsnprefix">
				<parameter name="type" value="string" />
				<parameter name="value" value="" />
				<parameter name="default" value="" />
				<description>
					<![CDATA[ DSN prefix ]]>
				</description>
			</object>
			<object name="dsnsuffix">
				<parameter name="type" value="string" />
				<parameter name="value" value="" />
				<parameter name="default" value="" />
				<description>
					<![CDATA[ DSN suffix ]]>
				</description>
			</object>
			<object name="hostname">
				<parameter name="type" value="string" />
				<parameter name="value" value="localhost" />
				<parameter name="default" value="localhost" />
				<description>
					<![CDATA[ Database host ]]>
				</description>
			</object>
			<object name="ssl">
				<parameter name="type" value="boolean" />
				<parameter name="value" value="" />
				<parameter name="default" value="" />
				<description>
					<![CDATA[ Use SSL connections ]]>
				</description>
			</object>
			<object name="port">
				<parameter name="type" value="integer" />
				<parameter name="value" value="" />
				<parameter name="default" value="" />
				<description>
					<![CDATA[ Database host port number ]]>
				</description>
			</object>
			<object name="timeout">
				<parameter name="type" value="integer" />
				<parameter name="value" value="3" />
				<parameter name="default" value="3" />
				<description>
					<![CDATA[ Connection timeout ]]>
				</description>
			</object>
			<object name="socket">
				<parameter name="type" value="string" />
				<parameter name="value" value="" />
				<parameter name="default" value="" />
				<description>
					<![CDATA[ Database socket ]]>
				</description>
			</object>
			<object name="delay">
				<parameter name="type" value="boolean" />
				<parameter name="value" value="true" />
				<parameter name="default" value="true" />
				<description>
					<![CDATA[ Delay connection until first query ]]>
				</description>
			</object>
			<object name="persistent">
				<parameter name="type" value="boolean" />
				<parameter name="value" value="false" />
				<parameter name="default" value="false" />
				<description>
					<![CDATA[ Create a persistent connection to the database ]]>
				</description>
			</object>
			<object name="database">
				<parameter name="type" value="string" />
				<parameter name="value" value="tuxxedo" />
				<parameter name="default" value="tuxxedo" />
				<description>
					<![CDATA[ Database name ]]>
				</description>
			</object>
			<object name="username">
				<parameter name="type" value="string" />
				<parameter name="value" value="tuxxedo" />
				<parameter name="default" value="tuxxedo" />
				<description>
					<![CDATA[ Database username ]]>
				</description>
			</object>
			<object name="password">
				<parameter name="type" value="string" />
				<parameter name="value" value="" />
				<parameter name="default" value="" />
				<description>
					<![CDATA[ Password for the associated user ]]>
				</description>
			</object>
			<object name="prefix">
				<parameter name="type" value="string" />
				<parameter name="value" value="" />
				<parameter name="default" value="" />
				<description>
					<![CDATA[ Table prefix ]]>
				</description>
			</object>
		</section>
	</document>
</tuxxedo>